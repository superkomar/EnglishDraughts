<Window x:Class="EnglishDraughts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishDraughts"
        xmlns:controls="clr-namespace:EnglishDraughts.View"
        mc:Ignorable="d"
        Title="English Draughts" Height="600" Width="800">

    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <controls:GameFieldView DockPanel.Dock="Left"/>
        
        <DockPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
            <GroupBox Header="Controls" DockPanel.Dock="Top">
                <controls:GameControllsView/>
            </GroupBox>

            <GroupBox Header="History" DockPanel.Dock="Bottom">
                <controls:GameHistoryView/>
            </GroupBox>
        </DockPanel>
    </DockPanel>

</Window>
