<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <local:GameFieldView DockPanel.Dock="Left" Width="Auto" Height="Auto"/>

        <DockPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
            <GroupBox Header="Controls" DockPanel.Dock="Top">
                <local:GameControllsView/>
            </GroupBox>

            <GroupBox Header="History" DockPanel.Dock="Bottom">
                <local:GameHistoryView/>
            </GroupBox>
        </DockPanel>
    </DockPanel>
</Window>
